{# def
    site_config: SiteConfig,
    current_path: str = "",
    toc: str = ""
#}

{% macro left_nav(nav) %}
    {% for item in nav %}
        {% if item.type == "item" %}
            <NavItem :item="{{ item }}" :current_path="{{ current_path }}"/>
        {% else %}
            <NavGroup :group="{{ item }}" :current_path="{{ current_path }}"/>
        {% endif %}
    {% endfor %}
{% endmacro %}

<BaseLayout :title="{{ site_config.site_name }}">
    <div class="min-h-screen bg-white dark:bg-zinc-950">
        <!-- top navbar -->
        <Navbar :title="{{ site_config.site_name }}" :nav="{{ site_config.mainNav }}"
                :current_path="{{ current_path }}"/>
        <div class="container grid grid-cols-[220px_1fr_220px] gap-6">
            <!-- left sidebar -->
            <SideNav side="left" :current_path="{{ current_path }}">
                {{ left_nav(site_config.sidebarNav) }}
            </SideNav>
            <!-- Main content area -->
            <main class="py-6">
                <div class="bg-white dark:bg-zinc-950 text-black dark:text-white">
                    {{ content }}
                </div>
            </main>
            <!-- right sidebar -->
            <SideNav side="right" :current_path="{{ current_path }}">
                <h2 class="text-sm font-semibold text-zinc-500 dark:text-zinc-400">On this page</h2>
                {{ toc }}
            </SideNav>
        </div>
    </div>
</BaseLayout>

