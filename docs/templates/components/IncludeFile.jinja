{# def
    dir: str,
    file_name: str = "docs/templates",
    lang: str = "html"
#}

{% set file_path = dir + "/" + file_name %}
<div class="relative">
    <CopyPasteButton/>

    {% set code_lang = "language-%s"|format(lang) %}
    <pre class="language-html p-4 bg-zinc-50 dark:bg-zinc-900 rounded-md"><code x-ref="code" class="{{ code_lang }}">{{ file_path | include_file|trim|e }}</code></pre>
</div>
