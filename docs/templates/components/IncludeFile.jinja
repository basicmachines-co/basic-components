{# def
    template: str,
    dir: str = "docs/templates",
    language: str = "html"
#}

{% set template_file = dir + "/" + template %}
<div class="relative">
    <CopyPasteButton/>

    {% set code_language = "language-" + language %}
    <pre class="language-html p-4 bg-zinc-50 dark:bg-zinc-900 rounded-md"><code x-ref="code" class="{{ code_language }}">{{ template_file | include_file|trim|e }}</code></pre>
</div>
