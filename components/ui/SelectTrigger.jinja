{#def className: str = "" #}
<button
    @click="open = !open"
    class="flex h-10 w-full items-center justify-between rounded-md border border-zinc-200 bg-white px-3 py-2 text-sm ring-offset-white focus:outline-none focus:ring-2 focus:ring-zinc-950 focus:ring-offset-2 dark:border-zinc-800 dark:bg-zinc-950 dark:ring-offset-zinc-950 placeholder:text-muted-foreground {{ className }}"
    :class="{ 'ring-2 ring-black': open }"
    x-ref="trigger"
    {{ attrs.render() }}
>
  {{ content }}
  <ChevronDown className="h-4 w-4 opacity-50" />
</button>
