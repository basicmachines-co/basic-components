{# def
    id: str = "",
    name: str = "",
    className: str = "",
    color: str = "",
    invert: bool = False
#}

<svg
    id="{{ id }}"
    class="{{ className }} {{ color }}"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
    {{ attrs.render() }}
>
  <use href="#{{ name }}" />
</svg>
