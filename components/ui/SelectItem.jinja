{#def value: str = "" #}
<div
    @click="selectedValue = '{{ value }}'; selectedLabel = '{{ content }}'; $refs.trigger.focus(); open = false"
    class="relative flex w-full cursor-default select-none items-center rounded-sm py-1.5 pl-8 pr-2 text-sm outline-none focus:bg-zinc-100 focus:text-zinc-900 data-[disabled]:pointer-events-none data-[disabled]:opacity-50 dark:focus:bg-zinc-800 dark:focus:text-zinc-50"
>
  <span class="absolute left-2 flex h-3.5 w-3.5 items-center justify-center" x-show="selectedValue === '{{ value }}'">
    <Check className="h-4 w-4" />
  </span>
  <span>{{ content }}</span>
</div>
