{#def value: str = "" #}
<div
    @click="selectedValue = '{{ value }}'; selectedLabel = '{{ content }}'; $refs.trigger.focus(); open = false"
    class="relative flex w-full cursor-pointer select-none items-center rounded-sm py-1.5 pl-8 pr-2 text-sm hover:bg-zinc-100 dark:hover:bg-zinc-800"
>
  <span class="absolute left-2" x-show="selectedValue === '{{ value }}'">
    <Check className="h-4 w-4" />
  </span>
  <span>{{ content }}</span>
</div>
