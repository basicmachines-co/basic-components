<h2 class="m-10">Dark Mode</h2>

<ModeToggle/>


<div class="flex space-x-2">
  <button
      @click="toggleMode('light')"
      class="px-4 py-2 border rounded text-gray-700 dark:text-gray-200"
  >
    Light
  </button>
  <button
      @click="toggleMode('dark')"
      class="px-4 py-2 border rounded text-gray-700 dark:text-gray-200"
  >
    Dark
  </button>
  <button
      @click="toggleMode('system')"
      class="px-4 py-2 border rounded text-gray-700 dark:text-gray-200"
  >
    System
  </button>
</div>
